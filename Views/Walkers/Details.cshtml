@model DogGo.Models.ViewModels.WalkerViewModel

@{
	ViewData["Title"] = "Details";
}
<div>
	<h1 class="mb-4">Walker Profile</h1>

	<section class="container">
		<img style="width:100px;float:left;margin-right:20px"
			 src=@Model.Walker.ImageUrl />
		<div>
			<div>
				<label class="font-weight-bold">Name:</label>
				<span>@Model.Walker.Name</span>
			</div>
			<div>
				<label class="font-weight-bold">Neighborhood:</label>
				<span>@Model.Walker.Neighborhood.Name</span>
			</div>

		</div>


	</section>

	<hr class="mt-5" />
	<div class="clearfix"></div>

	<div class="row">
		<section class="col-8 container mt-5">
			<h1 class="text-left">Recent Walks</h1>
			<table class="table">
				<thead>
					<tr>
						<th>
							Date
						</th>
						<th>
							Client
						</th>
						<th>
							Duration
						</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var walk in Model.Walks)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => walk.Date)
							</td>
							<td>
								@Html.DisplayFor(modelItem => walk.Owner.Name)
							</td>
							<td>
								@{
									int allMinutes = walk.Duration;
									int hours = allMinutes / 60;
									int minutes = allMinutes % 60;
								}
								@hours hours
								@minutes minutes
							</td>
						</tr>
					}

				</tbody>
			</table>

		</section>

		<section class="col-lg-4 col-md-8 container mt-5">
			<h1>Total Walk Time</h1>
			@{
				int totalWalkMinutes = Model.WalkTime;
				int totalHours = totalWalkMinutes / 60;
				int totalMinutes = totalWalkMinutes % 60;
			}
			<h3>@totalHours hour @totalMinutes minutes</h3>


		</section>
	</div>
</div>